  style
    | .option-picker__source[name='items'] + .option-picker .option-picker__option::before {
    |   content: '\2610\20';
    | }
    |
    | .option-picker__source[name='items'] + .option-picker .option-picker__option--disabled::before {
    |   content: '\2612\20';
    | }
    |
    | .option-picker__source[name='items'] + .option-picker .option-picker__option--selected::before {
    |   content: '\2611\20';
    | }

block content
  main
    form(method='get' target='_blank')
      p
        select(name='color')
          option(value='#ffffff') White
          option(value='#c0c0c0') Silver
          option(selected value='#808080') Gray
          option(value='#000000') Black
          option(value='#ff0000') Red
          option(value='#800000') Maroon
          option(value='#ffff00') Yellow
          option(value='#808000') Olive
          option(value='#00ff00') Lime
          option(value='#008000') Green
          option(value='#00ffff') Aqua
          option(value='#008080') Teal
          option(value='#0000ff') Blue
          option(value='#000080') Navy
          option(value='#ff00ff') Fuchsia
          option(value='#800080') Purple
      p
        select(multiple name='items')
          option Item 1
          option Item 2
          option Item 3
          option Item 4
          option(disabled) Item 5
      p
        button(type='submit') Submit