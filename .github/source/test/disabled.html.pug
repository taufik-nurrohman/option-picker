extends ../_index.pug

block state
  - const title = 'Option Picker'
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']

block script
  script
    | document.querySelectorAll('select').forEach(source => new OP(source));

block content
  main
    form(method='get' target='_blank')
      p
        select(name='test-1')
          option Option 1
          option Option 2
          option(disabled) Option 3
      p
        select(disabled name='test-2')
          option Option 1
          option Option 2
          option Option 3
      p
        button(type='submit') Submit
