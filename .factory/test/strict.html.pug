extends ../_index.pug

block state
  - const scripts = ['../index.js']
  - const styles = ['../index.min.css']
  - const title = 'Option Picker'

block script
  script
    | const picker_1 = new OptionPicker(document.querySelector('input[name=zone]'));
    | const picker_2 = new OptionPicker(document.querySelector('input[name=zone-strict]'), {
    |     strict: true
    | });

block style
  style
    | .option-picker {
    |   min-width: 20em;
    | }
    | .option-picker__options {
    |   background: #fff;
    | }

