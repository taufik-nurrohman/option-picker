      .mt-4
        .form-check
          input.form-check-input#toggle-dark(onchange='document.documentElement.setAttribute(\'data-bs-theme\', this.checked ? \'dark\' : \'light\');' type='checkbox' value='1')
          label.form-check-label(for='toggle-dark') Dark
  datalist(id='test-4')
